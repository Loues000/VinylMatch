# VinylMatch Staging Environment Configuration
# Copy this file to .env.staging and fill in your values

# Spotify OAuth (Use staging app credentials)
SPOTIFY_CLIENT_ID=your_staging_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_staging_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8888/api/auth/callback

# Discogs API (Optional)
DISCOGS_TOKEN=your_staging_discogs_token
DISCOGS_USER_AGENT=VinylMatch/1.0 (Staging)

# Public URL
PUBLIC_BASE_URL=http://localhost:8888

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Session Settings
SESSION_TTL_DAYS=30

# Security: Master Key for Token Encryption (AES-256-GCM)
# IMPORTANT: Generate a secure key with at least 32 characters!
# PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | ForEach-Object { [char]$_ })
VINYLMATCH_MASTER_KEY=your_32_char_master_key_here

# CORS (Add your staging frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8888

# Logging
LOG_LEVEL=DEBUG

# Error Tracking (Sentry - Optional for staging)
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging
